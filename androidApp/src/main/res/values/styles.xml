<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="chipStyle">@style/Chip</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="progressBarStyle">@style/ProgressBar</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primary</item>
        <item name="itemTextColor">@color/tint</item>
        <item name="itemIconTint">@color/tint</item>

    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/accent</item>
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="chipStrokeColor">@color/icon_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/icon_color</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CardTitle">
        <item name="android:background">@drawable/item_text_shadow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <dimen name="text_16">16sp</dimen>
</resources>